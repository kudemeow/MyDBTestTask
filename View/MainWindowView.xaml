<Window x:Class="testTaskDB.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:testTaskDB"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="Org" Content="Добавить новую организацию" HorizontalAlignment="Center" FontSize="30" Height="58" Margin="0,58,0,0" VerticalAlignment="Top" Width="496" Click="Org_Click"/>
        <Button x:Name="Emp" Content="Добавить нового сотрудника" HorizontalAlignment="Center" FontSize="30" Height="58" VerticalAlignment="Center" Width="496" Click="Emp_Click"/>
        <Button x:Name="New" Content="Все организации и сотрудники" HorizontalAlignment="Center" FontSize="30" Height="58" Margin="0,315,0,0" VerticalAlignment="Top" Width="496" Click="New_Click"/>
    </Grid>
</Window>
