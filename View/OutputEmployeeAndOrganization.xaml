<Window x:Class="testTaskDB.View.OutputEmployeeAndOrganization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:testTaskDB.View"
        mc:Ignorable="d"
        Title="OutputEmployeeAndOrganization" Height="450" Width="800">
    <Grid>
        <StackPanel Width="400" Height="350" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Border BorderThickness="1" BorderBrush="Black">
                <DataGrid x:Name="OrgTable"/>
            </Border>
        </StackPanel>

        <StackPanel Width="400" Height="350" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Border BorderThickness="1" BorderBrush="Black">
                <DataGrid x:Name="EmpTable"/>
            </Border>
        </StackPanel>

        <Button x:Name="Return" Content="Назад" FontSize="20" HorizontalAlignment="Left" Height="36" Margin="653,375,0,0" VerticalAlignment="Top" Width="123" Click="Return_Click"/>
    </Grid>
</Window>
